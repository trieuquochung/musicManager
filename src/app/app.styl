html
  min-width 320px
  font-size 62.5%
  line-height 1.4
  height 100%

body
  font-size 1.6rem
.app-body
  min-width 320px
  max-width 100%
  overflow auto
  height 100%

.app-header
  height 70px
  width 100%
  margin-bottom 2px
  background-color #4285f4
  box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.14),
    0 0 2px 2px rgba(0, 0, 0, 0.098),
    0 0 5px 1px rgba(0, 0, 0, 0.084)
  a
    font-size 2rem
    text-decoration none
  .my-header
    color #fff
    font-size 30px
    margin 10px 0 10px 10px
    .app-name
    .menu-button
      display inline
      span
        color #fff
    .menu-button
      i
        margin-left 5px
        color #fff
        cursor pointer

.app-main-content
  height 90%
  .app-main-content-nav
    height 100%
    background-color #4285f4

  .app-main-content-table
    margin-left 5px
    .breadcrumb
      width 100%
      height 40px
      line-height 33px
      margin 5px 0 3px 0
      border-bottom 2px solid #ccc

    .manage
      margin-top 0.1em
      float right
      width 100%
      height 100%
      .playlist-table
      .songs-table
        max-height 700px
        overflow auto
        padding 5px
      .hide-error-empty-name
        display none

      .content
        position relative
        width 100%
        height 60px
        margin 5px 0 3px 0
        border-bottom 2px solid #ccc
        h1
          display inline
          //margin-left 5px
        section
          float right
        .button-add-delete-search
        .icon-add-delete-search
          //display inline
          float right
          margin 0 0 0 0
        .md-input-container
          position relative
          margin-right 8px
          i
            position absolute
            float right
            margin 5px 10px 0 0
            cursor pointer
.app-footer
  .my-footer
    margin-top 5px
    position absolute
    bottom 0
    width 100%
    background-color #c4e6e1
    height 30px
    z-index 2
    a
      font-size 2rem
      text-decoration none
    p
      text-align center
      margin 0



